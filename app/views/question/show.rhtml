<% for column in Question.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @question.send(column.name) %>
  <% @answers
  <% for answer in @answers %>
    <tr>
    <% for column in Answer.content_columns %>
      <td><%=h answer.send(column.name) %></td>
    <% end %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @question %> |
<%= link_to 'Back', :action => 'list' %>
