<%= error_messages_for('question') %>

<h2>Question <%= @question.id %></h2>
<div class="question">
  <div class="question_header">
    <div class="question_type">
      <label for="question_type">Type</label>
      <select id="question_type" name="question[type]"><option value="multiple answers" selected>Multiple answers</option>
              <option value="single answer">Single answer</option></select>
    </div>
  </div>
  <div class="question_content">
    <%= text_area('question', 'content', :class => 'question_content') %></p>
  </div>
</div>   
<% 
   i = 0
   for @answer in @question.answers do
     i = i + 1
%>
  <div class="answer">
    <div class="answer_header">
      <div class="answer_number">
        Answer <%= i %>
      </div>
      <div class="answer_options">
        <label for="answer_is_correct">Is correct</label>
        <%= check_box('answer[]', 'is_correct') %>
      </div>
    </div>
    <div class="answer_content">
      <%= error_messages_for('answer') %>
      <%= text_area('answer[]', 'content', :class => 'answer_content' ) %>
    </div>
  </div>
<% end %>


