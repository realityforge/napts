<%= error_messages_for 'question' %>

<!--[form:question]-->
<p><label for="question_content">Content</label><br/>
<%= text_area 'question', 'content'  %></p>

<p><label for="question_is_on_test">Is on test</label><br/>
<%= check_box('question','is_on_test') %></p>

<p><label for="question_type">Type</label><br/>
<select id="question_type" name="question[type]"><option value="multiple answers" selected>Multiple answers</option><option value="single answer">Single answer</option></select></p>
<p><label for="answer_content">Answers</label><br/>
<% for @answer in @question.answers do %>
  Answer <br /> 
  <%= text_area('answer[]', 'content') %></p>
<% end %>
  

