<% @page_title = "#{@current_subject.name}: editing question#{@question.id}" %>
<h1>Editing question</h1>
<%= start_form_tag(:action => 'edit', :id => @question) %>
  <%= render( :partial => 'form' ) %>
  <p>
  <button type="submit">Edit</button>
   <p><%= link_to_button( "Add Resource", :action => 'list_resources', :id => @question ) %></p>

  <%= link_to_button("Cancel", {:action => 'show', :id => @question.id}) %>
  </p>
<%= end_form_tag %>

