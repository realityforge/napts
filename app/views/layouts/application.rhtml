<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= @page_title if @page_title %></title>
  <meta http-equiv="Content-Language" content="en-us" />
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="Pragma" content="no-cache" />
  <%= stylesheet_link_tag('layout') %>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <%= @content_for_head if @content_for_head %>
  <%= stylesheet_link_tag( 'napts' ) %>
  <%= javascript_include_tag( 'questions' ) %>
</head>
<body>

<div id="main">
<% if authenticated? %>
<div id="header">
    <%= render_links(get_user_links,:class =>'usermenu') %>
    <%= render_links(get_navigation_links,:class => 'menu') if false %>
</div>
<% end %>

<% style = flash[:alert] ? " alert" : (flash[:notice] ? " notice" : "") -%>
<div id="flash" class="<%= style %>">&nbsp;<%= flash[:alert] ? h(flash[:alert]) : h(flash[:notice]) -%></div>

<table>
<tr>
<% if @content_for_menu %>
<td id="menu"><%= @content_for_menu %></td>
<% end %>
<td id="content"><%= @content_for_layout %></td>
</tr>
</table>

</div>

<% if RAILS_ENV == 'development' %>
<center>
<button onclick="show_debug_popup(); return false;">Show debug popup</button></center>
<%= debug_popup %>
<% end %>

</body>
</html>
