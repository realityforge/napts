<% @page_title = 'New User' %>
<%= start_form_tag(:action => 'new', :q => params[:q], :page => params[:page]) %>
<div class="dataset">
<h2>New User</h2>
<%= error_messages_for('user', :header_tag => 'h3' ) %>
<table width="100%" cellpadding="3" cellspacing="0">
<tr>
  <th><label for="user_name">Name</label></th>
  <td>
    <%= text_field('user', 'name', {"class" => "textfield", "maxlength" => 25})%>
  </td>
</tr>
</table>

<button type="submit">Create</button>
 <%= link_to_button('Cancel', :action => 'list') %>
</div>

<%= end_form_tag %>
